<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Seed Collection</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <div>
        <h1>My Seed Collection</h1>
        <a href="/users/<%= user._id %>/plants/new">Add Plant</a>

        <% plants.forEach(plant => { %>
            <h2>
                <a href="/users/<%= user._id %>/plants/<%= plant._id %>"><%= plant.plantName %></a>
            </h2>
        <% }) %>
    </div>
</body>
</html>